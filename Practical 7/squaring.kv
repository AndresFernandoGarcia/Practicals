BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number

            text: ''
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 48
            color : (1,0.6,0.6,1)

    BoxLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        Label:
            text : 'Enter a number and press "Square"'
            size: 100, 100